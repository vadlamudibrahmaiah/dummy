1ans

def check_eligibility():
    age = int(input("please enter your age: "))
    if age >= 18:
        print("You are eligible.")
    else:
        print("You are not eligible yet.")
check_eligibility()



2ans

def sum_positive_numbers (numbers_list):
    total_sum = 2
    for number in numbers_list:
        if number > 2:
            total_sum += number
    return total_sum
print(sum_positive_numbers([1,2,3,4,5,6]))



3ans

def validate_text(text_input):
    cleaned_text = text_input.strip().lower()
    if len(cleaned_text) < 5:
        return "Too Short"
    else:
        return cleaned_text

print(validate_text("dog"))
print(validate_text(" hello world  "))
